<div class="settings-edit">
  <div class="row">
    <a href="/settings/<%= @settings.id %>" class="amber-text"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back to Settings</a>
  </div>
</div>
<div class="row center-align">
  <% if @settings.errors.any? %>
    <div class="alert">
      <ul>
        <% @settings.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
<div class="settings-edit-form">
  <div class="row">
    <%= form_tag "/settings/#{@settings.id}", method: :patch, class: "col s12 m12 l8 offset-l2" do %>
    <div class="row">
      <div class="input-field col s12">
        <%= email_field :settings, :email, value: "#{@settings.email}", class: "validate" %>
        <label for="email" data-error="Incorrect Format" data-success="" class="active">Default E-mail Address</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= telephone_field :settings, :phone, value: "#{@settings.phone}", class: "validate" %>
        <label for="phone" data-error="Incorrect Format" data-success="" class="active">Forwarding Text Number</label>
      </div>
    </div>
    <div class="row right-align">
      <button class="btn waves-effect waves-light amber" type="submit">Submit</button>
    </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('.tooltipped').tooltip({delay: 50});
  });
</script>
